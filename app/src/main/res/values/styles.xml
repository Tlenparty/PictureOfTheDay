<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item> <!--Основной-->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item> <!--Оттенок основого-->
        <item name="colorOnPrimary">#FFFFFF</item> <!--По верх основного -->
        <item name="colorSecondary">@color/colorAccent</item> <!--Вторичный для акцента-->
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>  <!--Цвет по верх акцентного -->
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item> <!--Цвет для поверхностей -->
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@android:color/white</item>  <!--Цвет под всеми цветами-->
        <item name="colorOnBackground">#212121</item>
        <item name="textInputStyle">@style/AppTextField</item> <!--Для Edittext-->

        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/color_gray</item>
        <!--для мелких виджетов типа кнопок и чипов-->
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <!--для средних виджетов типа карточек-->
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <!--shapeAppearanceLargeComponent — для крупных виджетов типа Bottom Sheet-->
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="AppTextField"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
     <!--   Цвет обводки
        boxBackgroundMode — тип фона. Обычный, очерченный и никакого: filled, outline or none.
        boxBackgroundColor — цвет фона. По умолчанию == colorOnSurface.
        boxStrokeColor — цвет обводки. По умолчанию == colorOnSurface.
        hintTextColor/errorTextColor/counterTextColor — цвет подсказки, ошибки, счётчика.
        shapeAppearance — форма.-->
        <item name="boxBackgroundColor">@color/text_field_background</item>
    </style>


    <style name="MySpaceTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray_dark</item>
        <item name="colorOnPrimary">@color/gray_light</item>
        <item name="bottomAppBarStyle">@style/MyBottomAppBarStyleSpace</item>
       <item name="floatingActionButtonStyle">@style/MyBottomAppBarStyleSpace</item>
    </style>

    <style name="MyPinkPlanetTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/shrine_pink_50</item>
        <item name="colorPrimaryVariant">@color/shrine_pink_900</item>
        <item name="colorOnPrimary">@color/shrine_pink_100</item>
        <item name="bottomAppBarStyle">@style/MyBottomAppBarStylePink</item>
        <item name="floatingActionButtonStyle">@style/MyBottomAppBarStylePink</item>
    </style>

    <style name="MyBottomAppBarStyleSpace" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/gray_dark</item>
    </style>

    <style name="MyFABStyleSpace" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/gray_light</item>
    </style>

    <style name="MyBottomAppBarStylePink" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/shrine_pink_900</item>
    </style>

    <style name="MyFABStylePink" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/shrine_pink_50</item>
    </style>
</resources>